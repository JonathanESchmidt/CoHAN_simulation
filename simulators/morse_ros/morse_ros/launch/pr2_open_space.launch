<launch>
    <!-- start morse with a scenario -->
    <arg name="scenario" default="open_space" />
    <arg name="with_humans" default="false" />

    <node pkg="morse_ros" type="start_morse.sh" args="$(find morse_ros)/scenarios/pr2_$(arg scenario)_human.py"
          name="morse" output="screen" required="true" if="$(arg with_humans)"/>
    <node pkg="morse_ros" type="start_morse.sh" args="$(find morse_ros)/scenarios/pr2_$(arg scenario).py"
          name="morse" output="screen" required="true" unless="$(arg with_humans)"/>

    <!-- use simulated clock -->
    <param name="use_sim_time" type="bool" value="true" />

    <!-- start pr2 robot -->
    <include file="$(find morse_ros)/launch/pr2.launch"/>

</launch>
